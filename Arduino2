void onConveyor() { 
  for (
    int i = 0; i < stepCount; i++) { 
    digitalWrite(PUL1_PIN, HIGH);
    digitalWrite(PUL2_PIN, HIGH);
    delayMicroseconds(1800000);
    digitalWrite(PUL1_PIN, LOW);
    digitalWrite(PUL2_PIN, LOW);
    delayMicroseconds(1800000);
    }
}

void activate_slicer(){
  digitalWrite(relaymotor, HIGH);
}
